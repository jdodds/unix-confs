out_to_x no
out_to_stderr no
out_to_console yes
cpu_avg_samples 2
text_buffer_size 512
update_interval 1.0
#update_interval_on_battery 10.0

TEXT
${if_match ${battery_percent} < 10}^fg(red)${blink_blank ^i(${cur_user_home}/.dzen/icons/bat_empty_01.xbm)}${else}${if_match ${battery_percent} >= 95}^fg(limegreen)${blink_blank ^i(${cur_user_home}/.dzen/icons/bat_full_01.xbm)}${else}${if_match ${battery_percent} <= 20}^fg(red)^i(${cur_user_home}/.dzen/icons/bat_empty_01.xbm)${else}${if_match ${battery_percent} >= 80}^fg(limegreen)^i(${cur_user_home}/.dzen/icons/bat_full_01.xbm)${else}^i(${cur_user_home}/.dzen/icons/bat_low_01.xbm)${endif}${endif}${endif}${endif}^fg(\#e0e0e0) \
#RAM
${if_match ${memperc} < 10}^fg(limegreen)^i(${cur_user_home}/.dzen/icons/mem.xbm)${else}${if_match ${memperc} >= 90}^fg(red)${blink_blank ^i(${cur_user_home}/.dzen/icons/mem.xbm)}${else}${if_match ${memperc} >= 70}^fg(red)^i(${cur_user_home}/.dzen/icons/mem.xbm)${else}^i(${cur_user_home}/.dzen/icons/mem.xbm)${endif}${endif}${endif}^fg(\#e0e0e0) \
#Swap
${if_match ${swapperc} <= 10}^fg(limegreen)^i(${cur_user_home}/.dzen/icons/diskette.xbm)${else}${if_match ${swapperc} >= 80}^fg(red)${blink_blank ^i(${cur_user_home}/.dzen/icons/diskette.xbm)}${else}${if_match ${swapperc} >= 50}^fg(red)^i(${cur_user_home}/.dzen/icons/diskette.xbm)${else}^i(${cur_user_home}/.dzen/icons/diskette.xbm)${endif}${endif}${endif}^fg(\#e0e0e0) \
#CPU
${if_match ${cpu cpu0} <= 25}^fg(limegreen)^i(${cur_user_home}/.dzen/icons/cpu.xbm)${else}${if_match ${cpu cpu0} >= 85}^fg(red)${blink_blank ^i(${cur_user_home}/.dzen/icons/cpu.xbm)}${else}${if_match ${cpu cpu0} >= 70}^fg(red)^i(${cur_user_home}/.dzen/icons/cpu.xbm)${else}^i(${cur_user_home}/.dzen/icons/cpu.xbm)${endif}${endif}${endif}^fg(\#e0e0e0) \
#HDD
${if_match ${fs_used_perc /home} <= 25}^fg(limegreen)^i(${cur_user_home}/.dzen/icons/hdd.xbm)${else}${if_match ${fs_used_perc /home} >= 98}^fg(red)${blink_blank ^i(${cur_user_home}/.dzen/icons/hdd.xbm)}${else}${if_match ${fs_used_perc /home} >= 85}^fg(red)^i(${cur_user_home}/.dzen/icons/hdd.xbm)${else}^i(${cur_user_home}/.dzen/icons/hdd.xbm)${endif}${endif}${endif}^fg(\#e0e0e0) \
#Net
${if_up wlan0}^i(${cur_user_home}/.dzen/icons/net_up_03.xbm) ${upspeedf wlan0} ^i(${cur_user_home}/.dzen/icons/net_down_03.xbm) ${downspeedf wlan0} ${if_match ${wireless_link_qual_perc wlan0} <= 30}^fg(red)${blink_blank ^i(${cur_user_home}/.dzen/icons/wifi_03.xbm)}${else}^i(${cur_user_home}/.dzen/icons/wifi_03.xbm)${endif}^fg(\#e0e0e0) \
${endif}\
${time %F %R}
